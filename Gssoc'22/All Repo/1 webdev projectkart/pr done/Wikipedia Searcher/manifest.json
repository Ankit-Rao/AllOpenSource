{
"manifest_version":2 ,
    "name": "wikipedia",
    "description":"Write something on it and wikipedia Search",
    "version": "1.0.0" ,
    "background" : {
        "page" : "index.html",
        "script": "script.js",
        "pesistent" : false
      },
      "content_script" :[
        {  "js":["script.js"]}
        ],
    "browser_action":{
        "default_title" : "Wikipedia Search",
        "default_popup":"index.html"
    },
    "icons":{"128":"logo.png"},

    "permissions":["activeTab","storage","<all_urls>","contextMenus"],

    "options_page": "index.html"   

}