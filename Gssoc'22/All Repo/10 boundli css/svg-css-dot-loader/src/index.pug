- let c = ['#c6c09c', '#ffc98b', '#ffb284', '#e79796'];
- let n = c.length, ba = 2*Math.PI/n, oa = .5*(((n - 1)%2)*ba - Math.PI);
- let d = 80, o = -.5*d, f = .8, b = [o, o, d, d].join(' ');

mixin nest(n, d, a = 1)
	- let s = +((1 - f)*d).toFixed(3);
	g(opacity=a !== 1 ? a : null)
		circle(r=+(.5*f*d).toFixed(2) stroke-width=s pathLength='4')
		if --n
			+nest(n, d - 2*s, +(f*a).toFixed(3))
		
svg(viewBox=b fill='none' stroke='url(#p)' stroke-dasharray='0 1' stroke-linecap='round')
	pattern#p(x='-50%' y='-50%' width='100%' height='100%' viewBox=b patternUnits='userSpaceOnUse')
		- for(let i = 0; i < n; i++)
			- let a0 = oa + i*ba, a1 = oa + (i + 1)*ba;
			path(d=`M0 0 ${~~(d*Math.cos(a0))} ${~~(d*Math.sin(a0))} ${~~(d*Math.cos(a1))} ${~~(d*Math.sin(a1))}` fill=c[i])
	+nest(n, d)